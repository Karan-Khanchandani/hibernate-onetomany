<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/postgres_test</property>
        <property name="hibernate.connection.username">dbuser</property>
        <property name="hibernate.connection.password">dbuser</property>

        <property name="connection_pool_size">1</property>
        <property name="hbm2ddl.auto">create</property>
        <property name="show_sql">true</property>

        <!-- List of XML mapping files -->
        <mapping resource="com.karan.hibernate.onetomany.hibernate-onetomany.main.entity.Order"/>
        <mapping resource="com.karan.hibernate.onetomany.hibernate-onetomany.main.entity.OrderItem"/>
        <mapping resource="com.karan.hibernate.onetomany.hibernate-onetomany.main.entity.Person"/>

    </session-factory>
</hibernate-configuration>